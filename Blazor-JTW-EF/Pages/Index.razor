@page "/"

@attribute [Authorize]

<PageTitle>Index</PageTitle>

<AuthorizeView>
    <Authorized>
        @if(context.User.HasClaim( c => c.Value == "Principal"))
        {
            <span>Principal</span>
        }
    </Authorized>
    <NotAuthorized>
        <h1>Access Denied</h1>
    </NotAuthorized>
</AuthorizeView>

@code {
    protected override async Task OnInitializedAsync()
    {
        
    }
}